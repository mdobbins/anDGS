<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/boardGridLS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/playTopMenuLS"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/playTMPassLS"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/Pass" />

                <TextView
                    android:id="@+id/playTMResignLS"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/Resign" />

                <TextView
                    android:id="@+id/playTMInfoLS"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/GameInfo" />

                <TextView
                    android:id="@+id/playTMDownLoadLS"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/downLoadGame" />

                <TextView
                    android:id="@+id/playTMHelpLS"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".08"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/QMark" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playMoveInfoLS"
                style="?colorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="@string/blank5"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/playerInfoLS"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/blank5" />
        </LinearLayout>

        <TableLayout
            style="?colorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/playLeftButtonLS"
                    style="?colorStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/blank5"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    style="?colorStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/playRightButtonLS"
                    style="?colorStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:text="@string/blank5"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/playerNoteLSLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?colorDivider">

            <TextView
                android:id="@+id/playerNoteLS"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clickable="true"
                android:ellipsize="end"
                android:hint="@string/GameNotes"
                android:maxLines="1"
                android:padding="4dp"
                android:text="@string/blank5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCommentLSLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?colorDivider">

            <TextView
                android:id="@+id/playerCommentLS"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clickable="true"
                android:hint="@string/Comment"
                android:padding="4dp"
                android:text="@string/blank5" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?colorStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/recBoardGridLStb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0sp" />

    <LinearLayout
        style="?colorStyle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/recTopMenuLStb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/recTMPassLStb"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/EndGame" />

                <TextView
                    android:id="@+id/recTMInfoLStb"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/GameInfo" />

                <TextView
                    android:id="@+id/recTMSaveLStb"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/Save" />

                <TextView
                    android:id="@+id/recTMModeLStb"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/blankButton" />

                <TextView
                    android:id="@+id/recTMHelpLStb"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".08"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/QMark" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recMoveInfoLStb"
                style="?colorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank5"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/recInfoLStb"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/blank5" />
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <ImageView
                    android:id="@+id/recFarLeftButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_rew" />

                <ImageView
                    android:id="@+id/recLeftButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_back" />

                <ImageView
                    android:id="@+id/recMidLeftButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_down" />

                <ImageView
                    android:id="@+id/recMidRightButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_up" />

                <ImageView
                    android:id="@+id/recRightButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_play" />

                <ImageView
                    android:id="@+id/recFarRightButtonLStb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".16"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_ff" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/recCommentLStbLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="?colorDivider">

            <TextView
                android:id="@+id/recCommentLStb"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clickable="true"
                android:hint="@string/Comment"
                android:padding="4dp"
                android:text="@string/blank5" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
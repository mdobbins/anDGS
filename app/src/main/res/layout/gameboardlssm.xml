<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?colorStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/recBoardGridLSsm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <LinearLayout
        style="?colorStyle"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/recTopMenuLSsm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/recTMPassLSsm"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/EndGame" />

                <TextView
                    android:id="@+id/recTMInfoLSsm"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/GameInfo" />

                <TextView
                    android:id="@+id/recTMSaveLSsm"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/Save" />

                <TextView
                    android:id="@+id/recTMModeLSsm"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".23"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/blankButton" />

                <TextView
                    android:id="@+id/recTMHelpLSsm"
                    style="?colorStyle"
                    android:layout_width="0dp"
                    android:layout_weight=".08"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:text="@string/QMark" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recMoveInfoLSsm"
                style="?colorStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="@string/blank5"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/recInfoLSsm"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/blank5" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:stretchColumns="*">

            <TableRow>

                <ImageView
                    android:id="@+id/recFarLeftButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_rew" />

                <ImageView
                    android:id="@+id/recFarRightButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_ff" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/recLeftButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_back" />

                <ImageView
                    android:id="@+id/recRightButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_play" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/recMidLeftButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_down" />

                <ImageView
                    android:id="@+id/recMidRightButtonLSsm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight=".5"
                    android:contentDescription="@string/blank5"
                    android:paddingBottom="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:src="@drawable/ic_media_up" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/recCommentLSsmLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="?colorDivider">

            <TextView
                android:id="@+id/recCommentLSsm"
                style="?colorStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:clickable="true"
                android:hint="@string/Comment"
                android:padding="4dp"
                android:text="@string/blank5" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
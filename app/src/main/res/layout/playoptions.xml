<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TableLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playOptsTopMenu" 
    android:stretchColumns="*">
<TableRow>
<TextView
    android:layout_width="0dp"
    android:layout_weight=".92"
    android:maxLines="2"
    style="?colorStyle"
    android:padding="4dp"
    android:gravity="left"
    android:textSize="18sp"
    android:text="@string/playOptsTitle"
    />

<TextView
    android:layout_width="0dp"
    android:layout_weight=".08"
    android:maxLines="2"
    style="?colorStyle"
    android:padding="4dp"
    android:gravity="center"
    android:id="@+id/playOptsTMHelp"
    android:text="@string/QMark"
    />
</TableRow>
</TableLayout>

<ScrollView 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	style="?colorStyle" 
	android:layout_below="@+id/playOptsTopMenu"
	android:layout_above="@+id/playOptsDoneLayout"
	>  
<LinearLayout
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:background="?colorDivider"
	android:orientation="vertical">  	    

<LinearLayout 
	style="?colorStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playModeLabel"
    android:layout_margin="1dp">	
 <Spinner 
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:prompt="@string/selectPlayMode"
    android:id="@+id/playModeSpinner"
    android:layout_margin="5dp"
    />
 <TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/selectPlayMode"
    android:id="@+id/PlayModeFlash"
    android:layout_margin="5dp"
    />	
</LinearLayout> 
<LinearLayout 
	style="?colorStyle" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playSkipMovesLabel"
    android:layout_margin="1dp"> 
<TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/prefsSkipMoves"
    android:id="@+id/playSkipMovesFlash"
    android:layout_margin="5dp"
    />	
<TextView
    style="?colorStyle"
    android:textSize="18sp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@string/blank5"
    android:id="@+id/playSkipMoves"
    android:layout_margin="5dp"
    />
</LinearLayout>
<LinearLayout 
	style="?colorStyle" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playEditNumPrevLabel"
    android:layout_margin="1dp"> 
<TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/prefsEditNumPrev"
    android:id="@+id/playEditNumPrevFlash"
    android:layout_margin="5dp"
    />	
<TextView
    style="?colorStyle"
    android:textSize="18sp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@string/blank5"
    android:id="@+id/playEditNumPrev"
    android:layout_margin="5dp"
    />
</LinearLayout>
<LinearLayout 
	style="?colorStyle" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playOptsAutoPlayIntervalLabel"
    android:layout_margin="1dp"> 
<TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/autoPlayInterval"
    android:id="@+id/playOptsAutoPlayIntervalFlash"
    android:layout_margin="5dp"
    />	
 <EditText
    style="?colorStyle"
    android:textSize="18sp"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@string/blank5"
    android:inputType="number"
    android:id="@+id/playOptsAutoPlayInterval"
    android:layout_margin="5dp"
    />
</LinearLayout>
<LinearLayout 
	style="?colorStyle" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playOptsAutoPlayPauseLabel"
    android:layout_margin="1dp">
 <CheckBox
 	style="?colorStyle"
 	android:textStyle="bold"
 	android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/playOptsAutoPlayPauseCheckBox"
    android:clickable="false"
    android:layout_margin="5dp"
    />   	         
 <TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/AutoPlayPause"
    android:id="@+id/playOptsAutoPlayPauseFlash"
    android:layout_margin="5dp"
    />  
</LinearLayout>
<LinearLayout 
	style="?colorStyle" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/playOptsAutoPlaySoundLabel"
    android:layout_margin="1dp">
 <CheckBox
 	style="?colorStyle"
 	android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text=""
    android:id="@+id/playOptsAutoPlaySoundCheckBox"
    android:layout_margin="5dp"
    />    	 
 <TextView
    style="?colorStyle"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:text="@string/AutoPlaySound"
    android:id="@+id/playOptsAutoPlaySoundFlash"
    android:layout_margin="5dp"
    /> 
</LinearLayout>
</LinearLayout>    
</ScrollView>

<LinearLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
	android:layout_marginBottom="1dp"
	android:background="?colorDivider" 
	android:id="@+id/playOptsDoneLayout"
	>
<TextView 
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:gravity="center"
	android:textStyle="bold"
    android:textSize="17sp"
	android:layout_margin="1dp"
	android:paddingTop="6dp"
	android:paddingBottom="6dp"
	style="?colorStyle" 
	android:clickable="true"
	android:text="@string/Save"
    android:id="@+id/playOptsDoneButton"
	/>
</LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/recTopMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/recTMPass"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/EndGame" />

            <TextView
                android:id="@+id/recTMInfo"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/GameInfo" />

            <TextView
                android:id="@+id/recTMSave"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/Save" />

            <TextView
                android:id="@+id/recTMMode"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/blankButton" />

            <TextView
                android:id="@+id/recTMHelp"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".08"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/QMark" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        style="?colorStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recMoveInfo"
            style="?colorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blank5"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/recInfo"
            style="?colorStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/blank5" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/recBoardGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?colorDivider">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>

                    <ImageView
                        android:id="@+id/recFarLeftButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_rew" />

                    <ImageView
                        android:id="@+id/recLeftButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_back" />

                    <ImageView
                        android:id="@+id/recMidLeftButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_down" />

                    <ImageView
                        android:id="@+id/recMidRightButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_up" />

                    <ImageView
                        android:id="@+id/recRightButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_play" />

                    <ImageView
                        android:id="@+id/recFarRightButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight=".16"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/blank5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_media_ff" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/recCommentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="?colorDivider">

                <TextView
                    android:id="@+id/recComment"
                    style="?colorStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    android:hint="@string/Comment"
                    android:padding="4dp"
                    android:text="@string/blank5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
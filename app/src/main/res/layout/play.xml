<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/playTopMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/playTMPass"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/Pass" />

            <TextView
                android:id="@+id/playTMResign"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/Resign" />

            <TextView
                android:id="@+id/playTMInfo"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/GameInfo" />

            <TextView
                android:id="@+id/playTMDownLoad"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".23"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/downLoadGame" />

            <TextView
                android:id="@+id/playTMHelp"
                style="?colorStyle"
                android:layout_width="0dp"
                android:layout_weight=".08"
                android:gravity="center"
                android:maxLines="2"
                android:padding="4dp"
                android:text="@string/QMark" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        style="?colorStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playMoveInfo"
            style="?colorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="4dp"
            android:text="@string/blank5"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/playerInfo"
            style="?colorStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/blank5" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/boardGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000">

        <LinearLayout
            style="?colorStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:id="@+id/playLeftButton"
                        style="?colorStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="left"
                        android:padding="4dp"
                        android:text="@string/blank5"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        style="?colorStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="4dp"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/playRightButton"
                        style="?colorStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="right"
                        android:padding="4dp"
                        android:text="@string/blank5"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/playerNoteLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?colorDivider">

                <TextView
                    android:id="@+id/playerNote"
                    style="?colorStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:hint="@string/GameNotes"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:text="@string/blank5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerCommentLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?colorDivider">

                <TextView
                    android:id="@+id/playerComment"
                    style="?colorStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    android:hint="@string/Comment"
                    android:padding="4dp"
                    android:text="@string/blank5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>